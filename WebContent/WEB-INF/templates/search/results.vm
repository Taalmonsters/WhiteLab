#set($maintab = "search")
#parse("header.vm")
#set($tab="results")
#parse("search/tabs.vm")

<div class="row tabs-content" id="search">
	<div class="large-14 medium-14 small-14 large-offset-1 medium-offset-1 small-offset-1">
		<div><h4>$labels.getString("result.queries"):</h4></div>
		<div class="large-16 medium-16 small-16 row">
			<table id="queries" class="select">
				<thead>
					<tr class="tbl_head">
						<th class="r">#</th>
						<th class="q">$labels.getString("result.query")</th>
						<th class="w">$labels.getString("result.within")</th>
						<th class="m">$labels.getString("result.filters")</th>
						<th class="g">$labels.getString("result.grouping")</th>
						<th class="status">$labels.getString("result.status")</th>
						<th class="h">$labels.getString("result.hits")</th>
						<th class="d">$labels.getString("result.documents")</th>
						<th class="control"></th>
					</tr>
				</thead>
				<tbody>
					#set($i = 0)
					#foreach($query in $queries)
						#set($i = $i + 1)
						<td>$i</td>
						<td>SessionManager.getQueryPattern($query)</td>
						<td>SessionManager.getQueryWithin($query)</td>
						<td>$query.get("filter")</td>
						<td>$query.get("group")</td>
						<td>$query.get("status")</td>
						<td>$query.get("hits")</td>
						<td>$query.get("docs")</td>
						<td>
							<button onclick="Whitelab.search.result.editQuery(1,'simple')" class="edit">EDIT</button>
							<button onclick="Whitelab.search.result.removeQuery(1)" class="remove">X</button>
						</td>
					#end
				</tbody>
			</table>
		</div>
		<div><h4>$labels.getString("result.results"):</h4></div>
		<div id="results" class="large-16 medium-16 small-16">
			#if($result)
				$result
			#end
		</div>
	</div>
</div>
#parse("footer.vm")
